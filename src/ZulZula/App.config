<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
      <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
    </configSections>
    <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
      <targets>
        <target name="console" xsi:type="ColoredConsole" layout="${longdate} ${level} ${threadid} ${message}"/>
        <target name="file" xsi:type="File" layout="${longdate} ${level} ${threadid} ${message}" fileName="${cached:cached=true:inner=${basedir}/logs/ZulZula-${date:format=yyyy-MM-dd}}.log"/>
      </targets>
      <rules>
        <logger name="*" minlevel="Trace" writeTo="console,file"/>
      </rules>
    </nlog>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>